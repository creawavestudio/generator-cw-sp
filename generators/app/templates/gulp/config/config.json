{
   "cfg": {
      "srv": {
         "port1": 8080,
         "port2": 8081,
         "tunel": "false"
      }
   },
   "paths": {
      "html": {
         "src": "src/pug/**/!(_)*.pug",
         "watch": "src/pug/**/*.pug",
         "middle": "markup/**/*.html",
         "dist": "markup"
      },
      "styles": {
         "src": "src/sass/**/*.{scss, sass}",
         "acss": "src/sass/_helpers/",
         "ignore": "!src/sass/_framework/**/*.scss",
         "middle": "markup/dist/css/**/*.css",
         "dist": "markup/dist/css/"
      },
      "javascript": {
         "src": "src/js/**/*.js",
         "dist": "markup/dist/js/"
      },
      "img": {
         "src": "src/img/**/*.*",
         "dist": "markup/dist/img/",
         "assets": "dist/img"
      },
      "sprites": {
         "src": "src/sprite/*",
         "img": "markup/dist/img/",
         "dest": "src/sass/_helpers/"
      }
   }
}